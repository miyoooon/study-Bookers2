<div class="container">
  <div class="row">
    <div class="mr-5 col-4 justify-content-center">
      <h1>User info</h1>
      <%= image_tag current_user.get_profile_image(100, 100) %>
      <table class="table">
        <tbody>
          <tr>
            <th scope="col">name</th>
            <th scope="col"><%= current_user.name %></th>
          </tr>
          <tr>
            <th scope="row">introduction</th>
            <td><%= current_user.introduction %></td>
        </tbody>
      </table>
      <%= link_to edit_user_path(current_user.id), class: "btn btn-outline-secondary col-12" do %>
        <i class="fa-solid fa-user-gear"></i>
      <% end %>
    </div>
    <div class="ml-4 col-7 justify-content-center">
      <h1>Books</h1>
      <table class="table">
        <tbody>
          <tr>
            <th></th>
            <td>Title</td>
            <td>Opinion</td>
          </tr>
          <% @books.each do |book| %>
          <tr>
            <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
            <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-4 justify-content-center mt-5">
      <h1>New book</h1>
      <%= form_with model: @book do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_area :body %><br>
        <%= f.submit "Create Book", class: "btn btn-success col-4 mt-3" %>
      <% end %>
    </div>
  </div>
</div>