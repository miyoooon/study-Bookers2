<div class="container">
  <div class="row justify-content-center">
    <div class="col-4">
      <h1>User info</h1>
      <%= form_with model: @user, method: :patch do |f| %>
      <p>Name</p>
      <%= f.text_field :name, class: "form-control" %>
      <p class="mt-3">Image</p>
      <%= f.file_field :profile_image, accept: "image/*" %>
      <p class="mt-3">Introduction</p>
      <%= f.text_area :introduction, class: "form-control" %><br>
      <%= f.submit "Update User", class: "btn btn-secondary mt-3" %>
      <% end %>
    </div>
  </div>
</div>

