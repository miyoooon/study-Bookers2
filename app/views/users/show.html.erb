<div class="container">
  <div class="row">
    <div class="col-4 justify-content-center">
      <h1>User info</h1>
      <%= image_tag @user.get_profile_image(100, 100) %>
      <table class="table">
        <tbody>
          <tr>
            <th scope="col">name</th>
            <th scope="col"><%= @user.name %></th>
          </tr>
          <tr>
            <th scope="row">introduction</th>
            <td><%= @user.introduction %></td>
        </tbody>
      </table>
      <% if @user.id == current_user.id %>
        <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary col-12" do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
      <% end %>
    </div>
    <div class="col-8 justify-content-center">
      <h1>Books</h1>
      <% @books.each do |book| %>
      <table class="table">
        <tbody>
          <tr>
            <th scope="col"></th>
            <th scope="col">Title</th>
            <th scope="col">Opinion</th>
          </tr>
          <tr>
            <td><%= image_tag book.user.get_profile_image(100, 100) %></td>
            <td class="col-3">
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
            <td class="col"><%= book.body %></td>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-4 justify-content-center mt-5">
      <h1>New book</h1>
      <%= form_with model: @book do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_area :body %><br>
        <%= f.submit "Create Book", class: "btn btn-success col-4 mt-3" %>
      <% end %>
    </div>
  </div>
</div>
